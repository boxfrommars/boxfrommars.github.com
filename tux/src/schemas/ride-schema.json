{
    "id": "/ride",
    "title": "Ride Schema",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer"
        },
        "orderType": {
            "type": "string",
            "enum": ["emergency", "normal", "preorder"]
        },
        "preOrderTime": {
            "oneOf": [{"type": "null"}, {"$ref": "/time"}]
        },
        "alertTypeId": {
            "type": "integer"
        },
        "orderedProperties": {
            "type": "object",
            "properties": {
                "options": {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    }
                },
                "type": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "integer"
                        },
                        "classId": {
                            "oneOf": [{"type": "null"}, {"type": "integer"}]
                        }
                    },
                    "required": ["id"]
                }
            }
        },
        "phone": {
            "type": "string",
            "pattern": "\\d+"
        },
        "description": {
            "type": "string"
        },
        "departureAddress": {
            "$ref": "/address"
        },
        "destinationAddress": {
            "$ref": "/address"
        },
        "vehicle": {
            "$ref": "/vehicle"
        },
        "timeline": {
            "$ref": "/timeline"
        },
        "path": {
            "type": "array",
            "items": {
                "$ref": "/geopoint"
            }
        },
        "costDetails": {
            "type": "object",
            "properties": {
                "callCost": {
                    "type": "numeric",
                    "minimum": 0
                },
                "distance": {
                    "type": "numeric",
                    "minimum": 0
                },
                "waitingTime": {
                    "type": "numeric",
                    "minimum": 0
                },
                "pathCost": {
                    "type": "numeric",
                    "minimum": 0
                },
                "waitingCost": {
                    "type": "numeric",
                    "minimum": 0
                },
                "cost": {
                    "type": "numeric",
                    "minimum": 0
                }
            },
            "required": []
        }
    },

    "required": ["id", "orderType", "preOrderTime", "alertTypeId", "orderedProperties", "phone", "description", "departureAddress", "destinationAddress", "vehicle", "timeline", "path", "costDetails"]
}